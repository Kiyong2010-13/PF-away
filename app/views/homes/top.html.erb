<div class="jumbotron jumbotron-fluid">
  <div class="container back">
    <div class="row">
      <div class="px-3 mx-auto my-3">
        <h1>Welcome to<strong> This is AwayEX!!</strong></h1>
        <p class="text-center my-3">
          アウェイをみんなでホームに！</br>
          <strong>Are you ready?</strong>
        </p>
      </div>
    </div>

    <div class="btn-wrapper col-6 mx-auto my-2">
      <% if customer_signed_in? %>
        <div class="row">
          <%= link_to "マイページ", customer_path(current_customer.id), class: "btn btn-primary btn-block mb-3" %>
        </div>
        <div class="row">
          <%= link_to "投稿ページ", new_post_path, class: "btn btn-warning mb-3 btn-block" %>
        </div>
      <% else %>
        <div class="row">
          <%= link_to "ログイン", new_customer_session_path, class: "btn btn-info btn-block mb-3 sign_in" %>
        </div>
        <div class="row">
          <%= link_to "新規会員登録", new_customer_registration_path, class: "btn btn-success btn-block mb-3 sign_up" %>
        </div>
      <% end %>
    </div>
  </div>
</div>