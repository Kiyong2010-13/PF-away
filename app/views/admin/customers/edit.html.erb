<div class="container">
  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4 my-5">
     <h3><strong><%= @customer.user_name %>さん</strong>の会員情報編集</h3>
     <%= form_with model:@customer, url:admin_customer_path(@customer.id), method: :patch, local:true do |f| %>
      <div class="field">
        <%= f.label :ユーザーネーム %><br />
        <%= f.text_field :user_name, class: "form-control mb-2", autofocus: true, autocomplete: "user_name" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, class: "form-control mb-2", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :好きなチーム %><br />
        <%= f.select :favorite_team, options_for_select(Customer.favorite_teams_i18n.invert, selected: f.object.favorite_team),  { class: 'form-control', id: 'favorite_team' } %>
      </div>

      <div class="field">
        <%= f.label :自己紹介文 %><br />
        <%= f.text_area :introduction, class: "form-control mb-2", autofocus: true, autocomplete: "user_name" %>
      </div>

      <div class="field mb-3">
        <%= f.label :会員ステータス %><br />
        <%= f.radio_button :is_deleted, false %><strong class="text-danger">有効</strong> <%= f.radio_button :is_deleted, true %><strong class="text-primary">退会</strong>
      </div>

      <div class="actions">
         <%= f.submit "変更を保存", class: 'form-control btn btn-success ' %>
      </div>
     <% end %>
    </div>
    <div class="col-sm-4"></div>
  </div>
</div>
