<div class="container my-3">
  <div class="row">
    <div class="offset-sm-5 col-sm-3">
      <h3>会員一覧</h3>
    </div>
    <div class="offset-sm-2 col-sm-8">
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>ユーザーネーム</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= link_to customer.id, admin_customer_path(customer.id) %></td>
              <td><%= customer.user_name %></td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted == false %>
                  <span class="text-danger">有効</span>
                <% else %>
                  <span class="text-primary">退会</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <%= paginate @posts %>
      </table>
    </div>
  </div>
</div>