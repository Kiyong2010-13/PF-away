<div class="error">
    <% if @genre.errors.any? %>
      <% @genre.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
</div>

<div class="container my-3">
  <div class="row">
    <div class="offset-sm-5 col-sm-3">
      <h3>ジャンル一覧</h3>
    </div>

    <table class="table offset-sm-2 col-sm-8">
      <thead>
        <tr>
          <th>ジャンル名</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
            <td><%= link_to "削除", admin_genre_path(genre.id), class: "btn btn-danger", method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>


  <div class="row my-5">
    <div class="col-sm-12">
      <h4>ジャンル登録</h4>
    </div>
    <div class="col-sm-12 my-3 ">
      <%= form_with model:@genre,url:admin_genres_path, local:true do |f| %>
        <label for="genre_name">ジャンル名</label>
        <%= f.text_field :name, placeholder:"ジャンル名" %>
        <p><%= f.submit '新規登録', class: 'btn btn-success' %></p>
      <% end %>
    </div>
  </div>
</div>