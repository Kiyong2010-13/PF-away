<div class="container">
  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4 my-5">
      <h2 class="mb-4 text-center">新規会員登録</h2>
      <%= form_with model: resource, url: customer_registration_path, local: true do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :ユーザーネーム %><span>*</span><br />
          <%= f.text_field :user_name, class: "form-control mb-2", autofocus: true, autocomplete: "user_name" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><span>*</span><br />
          <%= f.email_field :email, class: "form-control mb-2", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %><span>*</span><br />
          <%= f.password_field :password, class: "form-control mb-2", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %><span>(確認用)*</span><br />
          <%= f.password_field :password_confirmation, class: "form-control mb-2", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :好きなチーム %><br />
          <%= f.select :favorite_team, options_for_select(Customer.favorite_teams_i18n.invert, selected: f.object.favorite_team),  { class: 'form-control', id: 'favorite_team' } %>
        </div>

        <div class="field">
          <%= f.label :自己紹介文 %><br />
          <%= f.text_area :introduction, class: "form-control mb-4", autofocus: true %>
        </div>



        <div class="actions">
          <%= f.submit "新規登録", class: "form-control btn btn-success" %>
        </div>
      <% end %>
      <h5 class="mt-5">※既に登録済みの方</h5>
      <%= link_to "こちら", new_customer_session_path %>からログインしてください
    </div>
    <div class="col-sm-4"></div>
  </div>
</div>
