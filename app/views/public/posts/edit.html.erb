<div class="container">
  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4 my-4">
      <h2 class="mb-4 text-center"><strong>投稿編集</strong></h2>
    </div>
    <div class="col-sm-4"></div>
  </div>
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6 text-center">
      <%= form_with model:@post, url:post_path(@post.id), method: :patch, local:true do |f| %>
        <div class="field">
          <%= f.label :投稿タイトル %>
          <%= f.text_field :title, class: "form-control mb-2", autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :投稿内容 %>
          <%= f.text_area :body, class: "form-control mb-2", size: "10x10", autofocus: true %>
        </div>
        <div class="field mb-4">
          <%= f.label :ジャンル選択 %><span>: </span>
          <%= f.collection_select(:genre_id, @genres, :id, :name ) %>
        </div>
        <div class="field mb-4">
          <%= f.label :画像投稿 %><span>: </span>
          <%= f.attachment_field :post_image, class: "mb-2", placeholder: "画像投稿" %>
        </div>
        <div class="actions mb-4">
          <%= f.submit "更新する", class: "form-control btn btn-success", data: {confirm: "更新しますか? "} %>
        </div>

      <% end %>
    </div>
    <div class="col-sm-3"></div>
  </div>
</div>
