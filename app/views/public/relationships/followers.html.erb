<div class="container">
  <div class="row">
    <div class="col-sm-12 text-center my-1 mb-3">
      <h2><strong>フォロワー一覧</strong></h2>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10 text-center my-2">
      <% if @customers.exists? %>
       <table class="table">
         <thead>
           <tr>
             <th>ユーザー名</th>
             <th></th>
           </tr>
         </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td style="width:50%">
                  <%= link_to customer_path(customer.id) do %>
                    <%= attachment_image_tag customer, :profile_image,  format: 'jpeg', fallback: "no_image.jpg", size:'30x30', class: "rounded-circle mb-2" %>
                    <%= customer.user_name %>
                  <% end %>
                </td>
                <td style="width:50%">
                  <% unless customer == current_customer %>
                   <%= render 'public/relationships/follow_button', customer: customer %></td>
                  <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>フォロワーはいません</p>
      <% end %>
    </div>
  </div>
</div>