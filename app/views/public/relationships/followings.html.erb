<div class="container">
  <div class="row">
    <div class="col-sm-12 text-center my-1 mb-3">
      <h2><strong>フォロー一覧</strong></h2>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10 text-center my-2">
      <% if @customers.exists? %>
       <table class="table">
         <thead>
           <tr>
             <th>&ensp;</th>
             <th class="text-left">ユーザー名</th>
             <th></th>
           </tr>
         </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td>&ensp;</td>
                <td>
                  <div class="text-left">
                    <%= link_to customer_path(customer.id) do %>
                      <%= attachment_image_tag customer, :profile_image,  format: 'jpeg', fallback: "no_image.jpg", size:'30x30', class: "rounded-circle mb-2" %>
                      <%= customer.user_name %>
                    <% end %>
                  </div>
                </td>
                <td>
                  <% unless customer == current_customer %>
                    <%= render 'public/relationships/follow_button', customer: customer %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>フォローしているユーザーはいません</p>
      <% end %>
    </div>
  </div>
</div>